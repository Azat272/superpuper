<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="Pink" Grid.Column="0">
            <StackPanel VerticalAlignment="Center">
                <Button Content="Задание 1" Width="120" Height="30"
                        Background="Aqua" Margin="10"
                        Click="Task1_Click"/>
                <Button Content="Задание 2" Width="120" Height="30"
                        Background="Aqua"  Margin="10"
                        Click="Task2_Click"/>
                <Button Content="Задание 3" Width="120" Height="30"
                        Background="Aqua" Margin="10"
                        Click="Task3_Click"/>
                <Button Content="Задание 4" Width="120" Height="30"
                    Background="Aqua"
                    Click="Task4_Click"/>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" Grid.Column="1" Background="White"/>
    </Grid>
</Window>
