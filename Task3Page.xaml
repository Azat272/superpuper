<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WpfApp1.Task3Page"
      Title="Task3Page" av:DesignHeight="415" av:DesignWidth="655">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Наведи на меня" 
                       Style="{StaticResource CustomTextStyle}"
                       Margin="0,10"/>
            <TextBlock Text="Я тоже меняюсь" 
                       Style="{StaticResource CustomTextStyle}"
                       Margin="0,10"/>

            <Button x:Name="StyledButton" Content="Нажми меня"
                    Width="180" Height="50"
                    Style="{StaticResource CustomButtonStyle}"
                    Click="StyledButton_Click"
                    Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>
